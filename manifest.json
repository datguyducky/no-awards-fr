{
	"manifest_version": 2,
	"version": "2.2.0",

	"name": "No awards for Reddit",
	"description": "Hide awards all over the redesigned and old Reddit (on posts, comments, RPAN streams and more)",
	"author": "datguysheepy",

	"icons": {
		"48": "no-awards48.png",
		"96": "no-awards96.png",
		"128": "no-awards128.png"
	},

	"browser_action": {
		"default_icon": {
			"16": "no-awards16.png",
			"24": "no-awards24.png",
			"32": "no-awards32.png"
		},
		"default_title": "No Awards for Reddit",
		"default_popup": "no-awards-menu.html"
	},

	"permissions": ["storage", "tabs"],

	"content_scripts": [
		{
			"matches": ["*://*.reddit.com/*"],
			"run_at": "document_start",
			"js": ["no-awards.js"]
		}
	],

	"web_accessible_resources": [
		"css/commentsAndPostsAwards.css",
		"css/rpanAwards.css",
		"css/getCoinsBtn.css",
		"css/giveAwardsBtn.css",
		"css/profileAwards.css"
	]
}
